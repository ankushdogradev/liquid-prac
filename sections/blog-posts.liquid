{{ section.settings.liquid-range }}

{% assign blog = section.settings.new-blog %}

{% unless blog.articles_count == 0 %}

    <!-- Display articles based on range -->
    <div class="page-width" style="display:inline-flex">
        <div class="grid grid--uniform grid--blog">
            {% for article in blog.articles limit: section.settings.posts-range %}
                <div class="grid__item medium-up--one-third">
                    <a href="{{ article.url }}">
                        <img src="{{ article.image | img_url: '500x' }}"/>
                    </a>
                    <br/>
                    <a href="{{ article.url }}">
                        {{ article.title }}
                    </a>
                    <br/>
                    <br/>
                </div>
            {% endfor %}
        </div>
    </div>
{% endunless %}

{% schema %}
{
    "name": "New Blog Posts",
    "settings": [
        {
            "id": "posts-range",
            "type": "range",
            "label": "Range",
            "min": 3,
            "max": 12,
            "step": 3,
            "default": 3
        },
        {
            "id": "new-blog",
            "type": "blog",
            "label": "Blog"
        }
    ],
    "presets": [
        {
            "name": "New Blog Posts",
            "category": "Posts"
        }
    ]
}
{% endschema %}