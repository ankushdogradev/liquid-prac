{%- assign blog = section.settings.new-blog -%}

{% unless blog.articles_count == 0 %}
    <!-- Display Articles Based On Range -->
    <div class="page-width">
        <ul class="blog__posts articles-wrapper grid grid--peek grid--2-col-tablet grid--4-col-desktop">
            {% for article in blog.articles  limit: section.settings.posts-range %}
                <li class="blog__post grid__item article">
                    <a href="{{ article.url }}">
                        <img src="{{ article.image | img_url: '500x300' }}" alt="Article IMG" width="500" height="300" loading="lazy">
                    </a>
                    <br>
                    <a href="{{ article.url }}">
                        {{ article.title }}
                    </a>
                    <br>
                </>
            {% endfor %}
        </>
    </div>

{% endunless %}

{% schema %}
{
    "name":"New Blog Posts",
    "settings": [
        {
        
            "id":"posts-range",
            "type":"range",
            "label": "Range",
            "min": 3,
            "max": 12,
            "step": 3,
            "default":3
        },
        {
            "id": "new-blog",
            "type": "blog",
            "label": "Blog"
        }
    ],
    "presets": [
        {
            "name": "New Blog Posts",
            "category": "Posts"
        }
    ]

}
{% endschema %}