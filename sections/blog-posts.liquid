{%- assign blog = section.settings.new-blog -%}

{% unless blog.articles_count == 0 %}
    <!-- Display Articles Based On Range -->
    {% for article in blog.articles  limit: section.settings.posts-range %}
        <div class="grid__item medium-up--one-third">
            <a href="{{ article.url }}">
                <img src="{{ article.image | img_url: '500x300' }}" alt="Article IMG" width="500" height="300" loading="lazy">
            </a>
            <br>
            <a href="{{ article.url }}">
                {{ article.title }}
            </a>
            <br>
        </div>
    {% endfor %}
{% endunless %}

{% schema %}
{
    "name":"New Blog Posts",
    "settings": [
        {
        
            "id":"posts-range",
            "type":"range",
            "label": "Range",
            "min": 3,
            "max": 12,
            "step": 3,
            "default":3
        },
        {
            "id": "new-blog",
            "type": "blog",
            "label": "Blog"
        }
    ],
    "presets": [
        {
            "name": "New Blog Posts",
            "category": "Posts"
        }
    ]

}
{% endschema %}